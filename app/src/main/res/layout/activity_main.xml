<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E2EA"
    android:backgroundTint="#96E894">


    <Button
        android:id="@+id/obama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="President Obama"
        android:layout_above="@id/bush"
        android:backgroundTint="#8D04A5"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:height="75dp" />

    <Button
        android:id="@+id/bush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/graham"
        android:text="Jeb Bush"
        android:height="75dp"
        android:backgroundTint="#8D04A5"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/graham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lindsey Graham"
        android:layout_alignParentBottom="true"
        android:height="75dp"
        android:backgroundTint="#8D04A5"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/trump"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trumps Famous Quotes"
        android:layout_alignParentTop="true"/>


</RelativeLayout>